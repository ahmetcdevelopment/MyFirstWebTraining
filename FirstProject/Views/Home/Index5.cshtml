@model List< FirstProject.Models.Kitap>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index5</title>
        <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet"/>
    </head>
    <body>
        <h4>Merhaba Kitap sayfamıza hoşgeldiniz</h4>
        <table class ="table table-bordered">
            @foreach(var k in Model)
        {
         <tr>
             <td>@k.Id</td>
             <td>@k.KitapAdı</td>
             <td>@k.Yazar</td>
             <br/>
         </tr>   
        }
    </table>
    <button class="btn btn-warning">Tablo Listesi</button>
</body>
</html>
