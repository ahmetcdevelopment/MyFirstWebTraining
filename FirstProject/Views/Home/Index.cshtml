@{
    Layout = null;
}
<!DOCTYPE html>


<html>
    <head>
        <meta name"viewport" content="width=device-width"/>
        <title>Ders4</title>
    </head>
    <body>
        <div style ="background-color:#ff6a00">
            @DateTime.Now.ToShortDateString()
        </div>
        <br/>
        <div style="background-color:#ffd800">
        @for(int i = 1; i <= 10; i++)
        {
            @i
            <br/>
        }
        </div>
        <br/>
        <br/>
        <div style="background-color:#4cff00">
        @{
            var liste = new List<string> { "Ankara", "Bursa", "Konya" };
        }
        @foreach(var li in liste)
        {
            @li<br />
        }

        </div>

    </body>
